# Production Environment Configuration
# Backend déployé sur: sli.mobile.back.jordan-s.org

# Database Configuration (à adapter selon votre serveur de production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sli_db
DB_USER=postgres
DB_PASSWORD=CHANGEME_PRODUCTION_PASSWORD

# JWT Authentication
JWT_SECRET=CHANGEME_PRODUCTION_SECRET_256_BITS
JWT_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=production
# CORS: Accepte les requêtes depuis Expo (tunnel mode) et l'app mobile
CORS_ORIGIN=*

# File Upload
UPLOAD_DIR=/var/www/uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp
ALLOWED_SIGNATURE_TYPES=image/png,image/svg+xml

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=200

# Sync Configuration
SYNC_BATCH_SIZE=1000
SYNC_TIMEOUT_MS=300000
