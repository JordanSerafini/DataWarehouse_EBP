{
  "name": "ebp-to-pg-module",
  "version": "1.0.0",
  "description": "Module de synchronisation EBP vers PostgreSQL",
  "main": "electron/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "sync": "ts-node src/sync.ts",
    "discover": "ts-node src/discover-schema.ts",
    "server": "ts-node src/server.ts",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run server\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "ebp",
    "postgresql",
    "sync",
    "mapping"
  ],
  "author": "Jordan S.",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "mssql": "^12.0.0",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "pg-format": "^1.0.4",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/express": "^4.17.21",
    "@types/pg-format": "^1.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ebptopg.sync",
    "productName": "EBP Sync Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "clients/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "electron/assets/icon.ico"
    }
  }
}
